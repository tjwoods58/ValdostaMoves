<div id="mobileheader">
  Event
</div>
<div id="normalmobile">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
        <td><%= @event.title %></td>
    </tr>
      <th>Sponser</th>
        <td><%= @event.sponser %></td>
    </tr>
      <th>Address</th>
        <td><%= @event.address %></td>
    </tr>
      <th>Description</th>
        <td><%= @event.description %></td>
    </tr>
      <th>Event Date</th>
        <td><%= @event.start.strftime("%m / %d / %Y") %></td>
    </tr>  
      <th>Start Time</th>
        <td><%= @event.start.strftime("%I:%M %p") %></td>
    </tr>  
      <th>End Time</th>
        <td><%= @event.end.strftime("%I:%M %p") %></td>
    </tr>  
      <th>Contact Phone#</th>
        <td><%= @event.contactphone %></td>
    </tr>
  </thead>
</table>
</div>
<br>
<div id="mobileheader">
    Event Rating & Comments
</div> 
<% if @event.end < Date.today.to_s %>

<div id="normalmobile">
  <p>
  	Use 5-Star Rating Scale to Rate Event:
  </p>
  <p>
  	<%= rating_for @event, "rating", :star => 5 %>
  	</br>
  	<p>*Must Be Signed in to Rate.</p>
  </p>
</div>
<div id="normalmobile">
	<%= form_for @comment do |f| %>
  <%= f.hidden_field :event_id, value: @event.id %>
  <p>
    <%= f.label :"comment on the event" %>
  </p>
  <p>
    <%= f.text_area :comment%>
  </p>
  <%= f.submit "Post" %>
<% end %>
<% else %>
<div id="normalmobile">
	<%= form_for @comment do |f| %>
  <%= f.hidden_field :event_id, value: @event.id %>
  <p>
    <%= f.label :"comment on the event" %>
  </p>
  <p>
    <%= f.text_area :comment%>
  </p>
  <%= f.submit "Post" %>
<% end %>
<% end %>
</div>
<div id="mobilecomments">
<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Comment</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody id="changetable">
    <% @comments.each do |p| %>
      <tr>
      	<td><%= p.user.email %></td>
        <td><%= p.comment %></td>   
        <td><%= p.created_at.strftime("%m / %d / %Y") %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

</br>
    <div id="mobileheader">
    Event Location
    </div> 
</br>
<div id= "gmaps">
  <div id="map" style='width: 100%; height: 150px;'></div>
</div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>

<div data-role="footer">
<%= link_to 'Back', events_path, class: 'btn btn-primary' %>
</div>
