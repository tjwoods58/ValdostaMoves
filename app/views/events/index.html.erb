<h1>Upcoming Events</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Sponser</th>
      <th>Address</th>
      <th>Description</th>
      <th>Event Date</th>
      <th>Contact Phone#</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.sponser %></td>
        <td><%= event.address %></td>
        <td><%= event.description %></td>
        <td><%= event.eventdate %></td>
        <td><%= event.contactphone %></td>
        <td><%= link_to 'Show', event, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id='calendar'></div>

<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<div class="gym" style='width: 950px;'>
	<h3>Want to see where all the events are located?</h3>
  <div id="map" style='width: 950px; height: 500px;'></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>

