<script type="text/javascript">
    $(function () {
        $("[data-toggle='tooltip']").tooltip();
    });
</script>
<div id="mainbackground">
<div id= "mobilerecipes">
<h1>Recipe</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Recipe Image</th>	
            	<td style="width:200px;"><%= link_to image_tag(@recipe.imagesrc, class: 'list_image'), category_recipe_path(@category, @recipe), 'data-no-turbolink' => true %></td>
	</tr>
	    <tr>

      <th>Name</th>
              <td><%= @recipe.name %></td>
	</tr>
    <tr>

      <th>Added by</th>
              <td><%= @recipe.user.email %></td>
	</tr>
    <tr>

      <th>Ingredients</th>
              <td><%= @recipe.description %></td>
	</tr>
    <tr>

      <th>Instructions</th>
              <td><%= @recipe.instructions %></td>
	</tr>
    <tr>

      <th>Rating</th>
              <td><%= rating_for @recipe, "recipe", 'data-no-turbolink' => true %></td>
	</tr>
  </thead>

  </table>
</div>
  <%= link_to 'Back', categories_path(@category), class: "btn btn-primary" %>
</div>
