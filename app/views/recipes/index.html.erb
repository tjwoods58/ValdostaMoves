<script type="text/javascript">
    $(function () {
        $("[data-toggle='tooltip']").tooltip();
    });
</script>

<div id= "forum_align">
<h1>Listing recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Description</th>
      <th>Instructions</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.user.email %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.instructions %></td>
        <td><%= link_to 'Show', category_recipe_path(@category, recipe) %></td>
        <td>
          <% if can? :update, Recipe %>
            <%= link_to 'Edit', edit_category_recipe_path(@category, recipe) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, Recipe %>
            <%= link_to 'Destroy', category_recipe_path(@category, recipe), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Recipe %>
  <%= link_to 'New Recipe', new_category_recipe_path(@category) %>
<% end %>

</div>
