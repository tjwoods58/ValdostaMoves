<script type="text/javascript">
    $(function () {
        $("[data-toggle='tooltip']").tooltip();
    });
</script>
<%= simple_form_for([@category, @recipe]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>

    <%= f.input :description %>

    <%= f.input :instructions %>
    
    <%= f.input :imagesrc %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
