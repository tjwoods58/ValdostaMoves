<script type="text/javascript">
    $(function () {
        $("[data-toggle='tooltip']").tooltip();
    });
</script>
<div id= "mainbackground">
<div id= "mobilerecipes">
<h1>Listing recipes</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Recipe Image</th>	
      <th>Name</th>
      <th>Click here to show recipe</th>
      
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
      
      	<td><%= link_to image_tag(recipe.imagesrc, class: 'list_image'), category_recipe_path(@category, recipe), 'data-no-turbolink' => true %></td>
        <td><%= recipe.name %></td>
        <td><%= link_to 'Show', category_recipe_path(@category, recipe), class: 'btn btn-info', 'data-no-turbolink' => true %>
        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>

<%= will_paginate @recipes, 'data-no-turbolink' => true %>
</br>
<%= link_to ' Back', categories_path, class: "btn btn-primary" %>

</div>
