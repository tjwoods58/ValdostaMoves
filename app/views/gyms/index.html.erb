
<h1 class="gym">Gyms Near You</h1>

<table class="gym", style="fixed";>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @gyms.each do |gym| %>
      <col style="width:40%">
      <tr>
        <td style="word-wrap: break-word;"><%= gym.title %></td>
        <td style="word-wrap: break-word;"><%= gym.address %></td>
        <td style="word-wrap: break-word;"><%= gym.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<title></title>
<div class="gym">
	<h2></h2>
</div>

<div class="gym" style='width: 950px;'>
  <div id="map" style='width: 950px; height: 500px;'></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
<div class="gym">
<%= link_to 'New Gym', new_gym_path %>
</div>
