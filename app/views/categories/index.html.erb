<div id= "forum_align">

<h1>Listing categories</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Image</th>	
      <th>Name</th>
      <th></th>
      
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
      	<td><%= image_tag(category.imagesrc, class: 'list_image_categ') %></td>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category_recipes_path(category), class: 'btn btn-info' %>
        	<% if can? :edit, Category %>
        <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary' %>
        <%end %>
        <% if can? :destroy, Category %>
          <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <%end %>
       
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>

</div>>
