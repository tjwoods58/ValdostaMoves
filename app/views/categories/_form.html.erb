<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>

<div id="newcategory">
  <div class="form-inputs">
	<div class = "row">
    <%= f.input :name %>
    </div>
    <div class = "row">
	<%= f.input :imagesrc %>
	</div>
  </div>

  <div class="form-actions">
  	<br>
  	<div class = "action">
      <%= f.submit "Submit", class: 'btn btn-success' %>
   </div>
  </div>
</div>
<% end %>
