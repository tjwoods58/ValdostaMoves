<%= link_to @topic.forum.title, @topic.forum%>
<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th colspan="2"><%= @topic.title %></th>
  </tr>
  <% @topic.posts.each do |post| %>
  <tr>
    <td style="width:25%;">
      <%= link_to post.user.email, post.user %> <br />
      Posted At <br />
      <%= post.created_at%>
    </td>
    <td>
      <p><%=post.body%></p>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to 'Reply', reply_forum_topic_path(:forum_id=>@forum, :id=>@topic)%> |
<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %>
