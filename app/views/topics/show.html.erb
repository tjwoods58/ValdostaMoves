<div class="mainbackground">
<div id="forumsshow">

	<%= link_to @topic.forum.title, @topic.forum%>
	<p id="notice"><%= notice %></p>

	<table class="table forum-striped">
  	<tr>
    	<th><%= @topic.title %></th>
    	<th></th>
  	</tr>
  	<% @topic.posts.each do |post| %>
  	<tr>
    	<td style="width:25%;">
      		<%= link_to post.user.email, post.user %>
      		Posted At <%= post.created_at%>
    	</td>
    	<td>
      		<p><%=post.body%></p>
    	</td>
  	</tr>
  <% end %>
</table>
<% if can? :manage, User %>
<%= link_to 'Reply', reply_forum_topic_path(:forum_id=>@forum, :id=>@topic)%>|
<% end %>
		<%= link_to 'Back', forum_path(:id=> @topic.forum_id) %>
			<!--<%= link_to @topic.forum.title, @topic.forum%>-->
</div>
</div>
 


