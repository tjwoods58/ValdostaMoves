  <tr>
    <th>Forum</th>
    <th>Creator</th>
    <th>Topic Counts</th>
    <th></th>
    <th></th>
  </tr>
    <% @forums.each do |forum| %>
      <tr>
      	
       	<td><%= link_to forum.title, forum %></td>
        <td><%= forum.user.email %></td>
        <td><%= forum.topics.count %></td>
      </tr>
    <% end %>
</table>

</div>

</div>
